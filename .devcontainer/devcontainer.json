{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm run dev -- --host --port 5173"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.vue"
      ]
    }
  },
  "portsAttributes": {
    "5173": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [5173]
}

